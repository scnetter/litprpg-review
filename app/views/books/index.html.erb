<h2>LitRPG Books</h2>
<div class="bookshelf">
    <% @books.each do |book| %>
        <section>
            <div class="book">
                <h4><%= book.title %></h4>
                <%= link_to(image_tag(book.cover_img, style: 'height:200px; width:auto;' ), book) %>
                <p><%= year_of(book) %></p>
                <p><%= book.rating %></p>
                <p><%= truncate(book.synopsis, length: 50, separator: ' ') %></p>
            </div>
        </section>
    <% end %>
    <section class="admin">
        <%= link_to "Add New Book", new_book_path, class: "button" %>
    </section>
</div>