<%= form_with(model: book) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title, autofocus: true %>
    <%= f.label :author %>
    <%= f.text_field :author %>
    <%= f.label :cover_img %>
    <%= f.text_field :cover_img %>
    <%= f.label :rating %>
    <%= f.select :rating, Book::RATINGS, prompt: "Select Rating" %>
    <%= f.label :synopsis %>
    <%= f.text_area :synopsis, rows: 5 %>
    <%= f.label :publish_date %>
    <%= f.date_field :publish_date, {class: "date"} %>
    <%= f.submit %>
<% end %>